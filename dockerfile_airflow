FROM python:3.7
RUN pip install pip install gosu==1.1.24 && \
    pip install 'apache-airflow==2.2.5' && \
    pip install 'apache-airflow[postgres]==2.2.5'

RUN mkdir /project
COPY scripts_airflow/ /project/scripts/
RUN chmod +x /project/scripts/init.sh

## ENTRYPOINT [ "/project/scripts/init.sh" ]
